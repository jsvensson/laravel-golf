{
	"name": "jsvensson/golf",
	"description": "Playing around with Laravel 4",
	"require": {
		"laravel/framework": "4.0.*@dev",
		"cartalyst/sentry": "2.0.*",
		"fideloper/proxy": "dev-master",
		"davejamesmiller/laravel-breadcrumbs": "2.0.*",
		"anahkiasen/former": "dev-master",
		"jasonlewis/basset": "dev-master",
		"patricktalmadge/bootstrapper": "dev-develop",
		"leafo/scssphp": "dev-master",
		"barryvdh/laravel-debugbar": "dev-master"
	},
	"autoload": {
		"classmap": [
			"app/commands",
			"app/controllers",
			"app/models",
			"app/database/migrations",
			"app/database/seeds",
			"app/tests/TestCase.php"
		]
	},
	"scripts": {
		"post-install-cmd": [
		  "php artisan asset:publish patricktalmadge/bootstrapper",
			"php artisan debugbar:publish",
			"php artisan optimize"
		],
		"pre-update-cmd": [
			"php artisan clear-compiled"
		],
		"post-update-cmd": [
		  "php artisan asset:publish patricktalmadge/bootstrapper",
			"php artisan debugbar:publish",
			"php artisan optimize",
			"echo 'Clearing built assets' && rm -rf public/builds/*"
		],
		"post-create-project-cmd": [
			"php artisan key:generate"
		]
	},
	"config": {
		"preferred-install": "dist"
	},
	"minimum-stability": "dev"
}
