build:
  type: php
  stability: production
  lib_dir: 'vendor'

web1:
  type: php
  httpd_document_root: public
  php_version: 5.6
  php_extensions:
    - mcrypt
    - pdo_mysql
  network_dirs:
    storage1:
      - app/storage
      - app/storage/cache
      - app/storage/debugbar
      - app/storage/logs
      - app/storage/meta
      - app/storage/views
      - public/builds
  before_deploy:
    - "php artisan -n migrate"
  after_deploy:
    - "php artisan -n cache:clear"
    - "rm -f app/storage/views/*"
cache1:
  type: redis
