build:
  type: php
  version: 5.6
  stability: production
  lib_dir: 'vendor'

web1:
  type: php
  version: 5.6
  httpd_document_root: public
  php_extensions:
    - mcrypt
    - pdo_mysql
  network_dirs:
    storage1:
      - data/app/storage
      - data/public/builds
  before_deploy:
    - "php artisan -n migrate"
  after_deploy:
    - "php artisan -n cache:clear"
    - "rm -f app/storage/views/*"
cache1:
  type: redis
